{
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=4",
    "yarn": ">=1.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.6.2",
    "coveralls": "3.0.7",
    "husky": "0.14.3",
    "jest": "24.8.0",
    "jest-preset-react-x-dom": "3.0.0",
    "jest-preset-react-x-native": "3.0.0",
    "lerna": "3.18.3",
    "lint-staged": "4.0.3",
    "raf": "3.3.2",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-native": "0.59.8",
    "rimraf": "2.6.1"
  },
  "resolutions": {
    "react-test-renderer": "16.8.3"
  },
  "jest": {
    "projects": [
      "test/jest-config.dom.js",
      "test/jest-config.native.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn lint"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "themes/*",
      "tools/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean --yes && lerna run clean",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint .",
    "lint:cached": "yarn lint --cache",
    "precommit": "lint-staged",
    "publish": "lerna publish --exact",
    "test": "jest",
    "test:build": "yarn run build && yarn run test",
    "test:dom": "jest --config test/jest-config.dom.js",
    "test:native": "jest --config test/jest-config.native.js",
    "test:coverage": "yarn test --coverage"
  }
}
