{
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=4",
    "yarn": ">=1.0.1"
  },
  "devDependencies": {
    "coveralls": "^2.13.1",
    "eslint": "^4.4.1",
    "eslint-config-jolt": "^2.6.1",
    "eslint-plugin-jest": "^21.0.2",
    "husky": "^0.14.3",
    "jest": "^21.0.0-beta.1",
    "lerna": "3.14.1",
    "lint-staged": "^4.0.3",
    "raf": "^3.3.2",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "rimraf": "^2.6.1"
  },
  "eslintConfig": {
    "extends": "jolt"
  },
  "eslintIgnore": [
    "build",
    "coverage",
    "examples",
    "node_modules"
  ],
  "jest": {
    "projects": [
      "packages/*",
      "themes/*",
      "tools/*"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn lint"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "themes/*",
      "tools/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna clean --yes && lerna run clean",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint .",
    "lint:cached": "yarn lint --cache",
    "precommit": "lint-staged",
    "publish": "lerna publish --exact",
    "test": "jest",
    "test:build": "yarn run build && yarn run test",
    "test:coverage": "yarn test --coverage"
  }
}
